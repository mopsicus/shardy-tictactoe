{
  "name": "shardy-tictactoe",
  "version": "1.0.0",
  "description": "Tic-Tac-Toe game on Shardy",
  "license": "MIT",
  "author": "Mopsicus <mail@mopsicus.ru>",
  "homepage": "https://github.com/mopsicus/shardy-tictactoe",
  "scripts": {
    "build-ts": "tsc",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "build": "npm run build-ts && npm run lint",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix && npm run format",
    "serve-debug": "nodemon --inspect dist/app.js",
    "serve": "node dist/app.js",
    "start": "npm run serve",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/app.js",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\""
  },
  "keywords": [
    "shardy",
    "microservice",
    "rpc",
    "web",
    "netcode",
    "networking",
    "game",
    "tictactoe",
    "sample",
    "multiplayer",
    "websocket",
    "realtime",
    "server",
    "socket",
    "backend",
    "example",
    "typescript",
    "nodejs"    
  ],
  "bugs": {
    "url": "https://github.com/mopsicus/shardy-tictactoe/issues"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "ip": "^2.0.1",
    "shardy": "^1.0.2",
    "winston": "^3.14.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.11.1",
    "@types/eslint": "^9.6.1",
    "@types/ip": "^1.1.3",
    "@types/node": "^22.7.3",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "concurrently": "^9.0.1",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "nodemon": "^3.1.7",
    "typescript": "^5.6.2"
  }
}
